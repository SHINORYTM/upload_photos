<%= render 'layouts/title', title: 'ログイン' %>

<%= render 'layouts/error_messages', model: @user %>

<%= form_with url: login_path, local: true do %>
  <div class="field"><%= label_tag :name, 'ユーザID' %>
    <%= text_field_tag :login_id, params[:login_id] %>
  </div>
  <div class="field"><%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions"><%= submit_tag "ログイン" %>
  </div>
<% end %>